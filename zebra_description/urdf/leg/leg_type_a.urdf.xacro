<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Constants -->
  <xacro:property name="visual_mesh_scale" value="1.0 1.0 1.0"/>

  <!-- Link & Joint -->
  <xacro:macro name="leg_type_a" params="prefix parent *joint_origin">

    <joint name="${prefix}leg/root" type="fixed">
      <xacro:insert_block name="joint_origin" />
      <parent link="${parent}" />
      <child link="${prefix}leg/link_0" />
    </joint>
    
    <link name="${prefix}leg/link_0">
      <visual>
        <geometry>
          <mesh filename="package://zebra_description/meshes/leg/link0.stl" scale="${visual_mesh_scale}"/>
        </geometry>
        <material name="white"/>
      </visual>
    </link>

    <joint name="${prefix}leg/joint1" type="revolute">
      <parent link="${prefix}leg/link_0"/>
      <child link="${prefix}leg/link1"/>
      <origin xyz="0.112 0 0" rpy="${90*M_PI/180} 0 ${90*M_PI/180}"/>
      <axis xyz="0 0 1"/>
      <limit lower="${-25*M_PI/180}" upper="${25*M_PI/180}" effort="${joint_effort_limit}"
              velocity="${joint_velocity_limit}"/>
    </joint>

    <link name="${prefix}leg/link1">
      <visual>
        <geometry>
          <mesh filename="package://zebra_description/meshes/leg/link1.stl" scale="${visual_mesh_scale}"/>
        </geometry>
        <material name="white"/>
      </visual>
    </link>

    <joint name="${prefix}leg/joint2" type="revolute">
      <parent link="${prefix}leg/link1"/>
      <child link="${prefix}leg/link2"/>
      <origin xyz="0.0956 0 0" rpy="${-90*M_PI/180} 0 ${-90*M_PI/180}"/>
      <axis xyz="0 0 1"/>
      <limit lower="${-150*M_PI/180}" upper="${150*M_PI/180}" effort="${joint_effort_limit}"
              velocity="${joint_velocity_limit}"/>
    </joint>

    <link name="${prefix}leg/link2">
      <visual>
        <geometry>
          <mesh filename="package://zebra_description/meshes/leg/link2.stl" scale="${visual_mesh_scale}"/>
        </geometry>
        <material name="white"/>
      </visual>
    </link>

    <joint name="${prefix}leg/joint3" type="revolute">
      <parent link="${prefix}leg/link2"/>
      <child link="${prefix}leg/link3"/>
      <origin xyz="0.18 0 0" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="${-135*M_PI/180}" upper="${135*M_PI/180}" effort="${joint_effort_limit}"
              velocity="${joint_velocity_limit}"/>
    </joint>

    <link name="${prefix}leg/link3">
      <visual>
        <geometry>
          <mesh filename="package://zebra_description/meshes/leg/link3.stl" scale="${visual_mesh_scale}"/>
        </geometry>
        <material name="white"/>
      </visual>
    </link>

    <joint name="${prefix}leg/joint_tip" type="fixed">
      <parent link="${prefix}leg/link3"/>
      <child link="${prefix}leg/link_tip"/>
      <origin xyz="0.18 0 0" rpy="0 0 0"/>
    </joint>

    <link name="${prefix}leg/link_tip"/>
  
  </xacro:macro>
</robot>